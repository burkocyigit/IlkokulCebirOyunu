<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".FinishScreen">

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="66dp"
        android:layout_marginBottom="76dp"
        android:onClick="startAgain"
        android:text="Tekrar Oyna"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/finishScore"
        android:layout_width="302dp"
        android:layout_height="129dp"
        android:layout_marginBottom="68dp"
        android:text="Skorun : "
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cevaplanan"
        android:layout_width="117dp"
        android:layout_height="23dp"
        android:text="Cevaplanan : "
        app:layout_constraintBottom_toTopOf="@+id/dogru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/dogru"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_marginBottom="4dp"
        android:text="Doğru : "
        android:textColor="#1AC81D"
        app:layout_constraintBottom_toTopOf="@+id/yanlis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/yanlis"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:text="Yanlış : "
        android:textColor="#EA2727"
        app:layout_constraintBottom_toTopOf="@+id/finishScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>